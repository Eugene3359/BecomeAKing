<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Buttons -->
    <style name="ButtonBack">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="backgroundColor">@color/button_dark_brown</item>
        <item name="android:text">@string/back</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Dialogue -->
    <style name="DialogueStrip">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">10dp</item>
        <item name="android:background">@color/dialogue_dark_brown</item>
    </style>

    <style name="DialogueHeaderContainer">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">7.5dp</item>
        <item name="android:layout_marginBottom">2.5dp</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="DialogueCoinImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/icon_coin2</item>
    </style>

    <style name="DialogueText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">@string/placeholder</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DialogueText.Header">
        <item name="android:layout_marginHorizontal">15dp</item>
    </style>

    <style name="DialogueText.Message">
        <item name="android:layout_marginVertical">7.5dp</item>
    </style>

    <style name="DialogueButton">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginVertical">7.5dp</item>
        <item name="android:layout_marginHorizontal">20dp</item>
        <item name="android:paddingHorizontal">20dp</item>
        <item name="borderColor">@color/text_almost_white</item>
        <item name="android:text">@string/got_it</item>
        <item name="android:textColor">@color/text_almost_white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <!-- Bank -->
    <style name="BankServiceTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/bank_brown</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BankServiceContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="backgroundColor">@color/brown</item>
        <item name="backgroundDrawable">@drawable/bg_wood_wall</item>
    </style>

    <style name="BankOperationContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingHorizontal">5dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="cornerRadius">3dp</item>
        <item name="backgroundColor">@color/bank_yellow</item>
    </style>

    <style name="BankCoinImage">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:src">@drawable/icon_coin1</item>
    </style>

    <style name="BankAmount">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:text">@string/_0</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BankAmount.Red">
        <item name="android:textColor">@color/bank_text_red</item>
    </style>

    <style name="BankAmount.Green">
        <item name="android:textColor">@color/bank_text_green</item>
    </style>

    <style name="BankButton">
        <item name="android:layout_width">104dp</item>
        <item name="android:layout_height">24dp</item>
        <item name="android:padding">0dp</item>
        <item name="cornerRadius">3dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="BankButton.Dark">
        <item name="backgroundColor">@color/bank_button1</item>
    </style>

    <style name="BankButton.Light">
        <item name="backgroundColor">@color/bank_button2</item>
    </style>

</resources>