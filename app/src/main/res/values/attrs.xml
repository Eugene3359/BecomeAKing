<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="isSquare" format="boolean" />
    <attr name="borderColor" format="color" />
    <attr name="cornerRadius" format="dimension" />
    <attr name="backgroundColor" format="color" />
    <attr name="backgroundDrawable" format="reference" />
    <attr name="src" format="reference" />
    <attr name="text" format="reference" />


    <declare-styleable name="CustomButton">
        <attr name="borderColor" />
        <attr name="cornerRadius" />
        <attr name="backgroundColor" />
        <attr name="backgroundColorPressed" format="color" />
        <attr name="backgroundDrawable" />
        <attr name="backgroundDrawablePressed" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomRadioButton">
        <attr name="borderColor" />
        <attr name="backgroundColor" />
        <attr name="backgroundColorSelected" format="color" />
        <attr name="backgroundDrawable" />
        <attr name="backgroundDrawableSelected" format="reference" />
    </declare-styleable>

    <declare-styleable name="CustomTextView">
        <attr name="borderColor" />
        <attr name="backgroundColor" />
        <attr name="backgroundDrawable" />
    </declare-styleable>

    <declare-styleable name="CustomImageView">
        <attr name="isSquare" />
        <attr name="borderColor" />
        <attr name="backgroundColor" />
        <attr name="backgroundDrawable" />
    </declare-styleable>

    <declare-styleable name="CustomLinearLayout">
        <attr name="isSquare" />
        <attr name="borderColor" />
        <attr name="cornerRadius" />
        <attr name="backgroundColor" />
        <attr name="backgroundDrawable" />
    </declare-styleable>

    <declare-styleable name="FinanceMenuElementLayout">
        <attr name="src" />
        <attr name="text" />
        <attr name="buttonText" format="reference" />
    </declare-styleable>

    <declare-styleable name="CurrentCityLayout">
        <attr name="src" />
        <attr name="text" />
    </declare-styleable>

</resources>