<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_brown"
    tools:context=".view.activity.Clicker1Activity">

    <include layout="@layout/layout_cloth_background" />

    <com.scipath.becomeaking.view.customview.CustomLinearLayout
        android:layout_width="match_parent"
        android:layout_height="108dp"
        app:layout_constraintTop_toTopOf="parent"
        app:backgroundColor="@color/cloth_dark_brown"
        app:backgroundDrawable="@drawable/bg_wood_wall"
        android:orientation="vertical"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <TextView
                android:id="@+id/text_view_work"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center" />

            <TextView
                android:layout_width="50dp"
                android:layout_height="30dp"
                android:layout_marginLeft="20dp"
                android:background="@color/darkest_brown"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center"
                android:visibility="gone" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center" >
            
            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/icon_coin1"
                android:contentDescription="@string/money" />

            <TextView
                android:id="@+id/text_view_money_earned"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_0"
                android:textColor="@color/white"
                android:textSize="20sp" />

        </LinearLayout>

    </com.scipath.becomeaking.view.customview.CustomLinearLayout>

    <com.scipath.becomeaking.view.customview.CustomLinearLayout
        android:id="@+id/container_clicker"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="138dp"
        app:isSquare="true"
        app:backgroundColor="@color/cloth_darkest_brown"
        app:backgroundDrawable="@drawable/bg_wood_wall"
        android:gravity="center">

        <com.scipath.becomeaking.view.customview.CustomImageView
            android:id="@+id/image_view_work"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="17dp"
            app:isSquare="true"
            android:src="@drawable/bg_placeholder"
            android:contentDescription="@string/placeholder"/>

    </com.scipath.becomeaking.view.customview.CustomLinearLayout>

    <com.scipath.becomeaking.view.customview.CustomLinearLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/container_clicker"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_margin="20dp"
        app:backgroundColor="@color/cloth_dark_brown"
        app:backgroundDrawable="@drawable/bg_wood_wall"
        android:gravity="center" >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_coin1"
            android:contentDescription="@string/money" />

        <TextView
            android:id="@+id/text_view_money_per_click"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </com.scipath.becomeaking.view.customview.CustomLinearLayout>

    <com.scipath.becomeaking.view.customview.CustomLinearLayout
        android:layout_width="120dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toBottomOf="@id/container_clicker"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="20dp"
        app:backgroundColor="@color/cloth_dark_brown"
        app:backgroundDrawable="@drawable/bg_wood_wall"
        android:gravity="center" >

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginRight="10dp"
            android:src="@drawable/icon_watch2"
            android:contentDescription="@string/watch" />

        <TextView
            android:id="@+id/text_view_timer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/_0"
            android:textColor="@color/white"
            android:textSize="20sp" />

    </com.scipath.becomeaking.view.customview.CustomLinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>