<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_dark_brown"
    tools:context=".view.activity.MainActivity">

    <include layout="@layout/layout_cloth_background" />

    <ImageView
        android:id="@+id/image_view_knights"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/img_knights"
        android:alpha="0.3"
        android:contentDescription="@string/image_of_knights" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="140dp"
            android:layout_marginBottom="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_new_game"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height_big"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_light_brown"
                app:backgroundColorPressed="@color/button_light_brown_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/new_game"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false" />

            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_load"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height_big"
                android:layout_marginTop="30dp"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_light_brown"
                app:backgroundColorPressed="@color/button_light_brown_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/load"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false"/>

            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_language"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height_big"
                android:layout_marginTop="30dp"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_light_brown"
                app:backgroundColorPressed="@color/button_light_brown_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/language"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false" />

            <!-- Test button -->
            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_test"
                android:layout_width="@dimen/view_width"
                android:layout_height="@dimen/view_height_big"
                android:layout_marginTop="30dp"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_light_brown"
                app:backgroundColorPressed="@color/button_light_brown_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/test"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false"
                android:visibility="gone" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>