<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="70dp"
    android:gravity="center_vertical" >

    <com.google.android.material.slider.Slider
        android:id="@+id/slider_amount"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        app:trackColorInactive="@color/slider_brown"
        app:trackColorActive="@color/bank_yellow"
        app:thumbColor="@color/bank_yellow" />

    <EditText
        android:id="@+id/input_amount"
        android:layout_width="86dp"
        android:layout_height="22dp"
        android:layout_marginLeft="20dp"
        android:background="@color/bank_yellow"
        android:inputType="number"
        android:labelFor="@id/text_header"
        android:importantForAutofill="no"
        android:hint="@string/_0"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:textSize="14sp"
        android:textStyle="bold"
        tools:ignore="RtlHardcoded" />
</LinearLayout>