<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".view.fragment.DialogueFragment"
    android:orientation="vertical" >

    <com.scipath.becomeaking.view.customview.CustomLinearLayout
        android:layout_width="286dp"
        android:layout_height="wrap_content"
        android:padding="25dp"
        app:backgroundColor="@color/cloth_brown"
        app:backgroundDrawable="@drawable/bg_cloth"
        android:orientation="vertical"
        android:layout_gravity="center_horizontal" >

        <LinearLayout
            android:id="@+id/layout_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp" >

            <TextView
                android:id="@+id/text_view_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/placeholder"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:textAlignment="center" />
        </LinearLayout>

        <TextView
            android:id="@+id/text_view_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/placeholder"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAlignment="center" />

        <com.scipath.becomeaking.view.customview.CustomButton
            android:id="@+id/button_end_dialogue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            app:backgroundColor="@color/transparent_green"
            android:text="@string/placeholder"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textAllCaps="false" />

    </com.scipath.becomeaking.view.customview.CustomLinearLayout>

</FrameLayout>

