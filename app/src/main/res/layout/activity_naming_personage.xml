<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_brown"
    tools:context=".view.activity.NamingPersonageActivity">

    <include layout="@layout/layout_activity_background" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="20dp"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="268dp"
                android:layout_height="wrap_content"
                android:text="@string/name_your_personage"
                android:textColor="@color/text_light_brown1"
                android:textSize="32sp"
                android:textAlignment="center" />

            <EditText
                android:id="@+id/edit_text_name_input"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginVertical="75dp"
                android:background="@color/white"
                android:backgroundTint="@color/white"
                android:inputType="text"
                android:hint="@string/enter_a_name"
                android:textColor="@color/black"
                android:textColorHint="@color/black"
                android:textSize="24sp"
                android:textStyle="italic"
                android:textAlignment="center"
                android:importantForAutofill="no" />

            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_start"
                android:layout_height="@dimen/view_height_big"
                android:layout_width="@dimen/view_width"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_green"
                app:backgroundColorPressed="@color/button_green_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/start"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false" />

            <com.scipath.becomeaking.view.customview.CustomButton
                android:id="@+id/button_back"
                android:layout_height="@dimen/view_height_big"
                android:layout_width="@dimen/view_width"
                android:layout_marginTop="20dp"
                app:borderColor="@color/black"
                app:backgroundColor="@color/button_light_brown"
                app:backgroundColorPressed="@color/button_light_brown_pressed"
                app:backgroundDrawable="@drawable/bg_wood_wall"
                android:text="@string/back"
                android:textColor="@color/black"
                android:textSize="@dimen/font_size_big"
                android:textAllCaps="false" />

        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>