<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_brown"
    tools:context=".view.activity.MapActivity">

    <com.scipath.becomeaking.view.customview.CustomButton
        android:id="@+id/button_back"
        android:layout_width="142dp"
        android:layout_height="38dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:backgroundColor="@color/cloth_brown"
        app:backgroundColorPressed="@color/cloth_dark_brown"
        app:backgroundDrawable="@drawable/bg_cloth1"
        android:text="@string/back"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textAllCaps="false" />

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:scrollbars="none">

        <FrameLayout
            android:id="@+id/map_container"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/img_map"
                android:adjustViewBounds="true"
                android:scaleType="fitXY"
                android:contentDescription="@string/map" />

            <com.scipath.becomeaking.view.customview.MapRoutesView
                android:id="@+id/map_routes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent" />

        </FrameLayout>

    </HorizontalScrollView>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_margin="5dp"
        android:orientation="horizontal" >

        <ImageButton
            android:id="@+id/button_finance"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="5dp"
            android:foreground="@drawable/ib_border"
            android:background="@color/game_menu_brown"
            android:src="@drawable/icon_moneybag"
            android:scaleType="fitCenter"
            android:contentDescription="@string/finance" />

        <ImageButton
            android:id="@+id/button_battle"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:foreground="@drawable/ib_border"
            android:background="@color/game_menu_brown"
            android:src="@drawable/icon_battle"
            android:scaleType="fitCenter"
            android:contentDescription="@string/battle" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>