<?xml version="1.0" encoding="utf-8"?>
<com.scipath.becomeaking.view.view.CustomLinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item_layout"
    android:layout_width="236dp"
    android:layout_height="463dp"
    app:backgroundColor="@color/brown"
    app:backgroundDrawable="@drawable/bg_wood_wall"
    android:orientation="vertical"
    android:layout_gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/text_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/placeholder"
            android:textSize="@dimen/font_size_small"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:gravity="center"/>

        <TextView
            android:id="@+id/text_requirement"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:text="@string/placeholder"
            android:textSize="@dimen/font_size_smallest"
            android:textStyle="bold"
            android:textColor="@color/requirement_light_gray"
            android:visibility="gone" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="235dp"
        android:background="@color/item_dark_brown" >

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:src="@drawable/item_placeholder"
            android:adjustViewBounds="true"
            android:contentDescription="@string/placeholder"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="104dp"
        android:layout_marginVertical="7.5dp"
        android:gravity="center" >

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/stats_list"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:context=".view.activity.GameActivity"
            app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    </LinearLayout>

    <com.scipath.becomeaking.view.view.CustomButton
        android:id="@+id/button_interact"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        app:backgroundColor="@color/transparent_green"
        android:text="@string/placeholder"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textAllCaps="false" />

</com.scipath.becomeaking.view.view.CustomLinearLayout>