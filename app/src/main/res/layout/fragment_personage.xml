            <LinearLayout
                android:id="@+id/layout_health_for_ad"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center_vertical" >

                <com.scipath.becomeaking.view.view.CustomLinearLayout
                    android:layout_width="0dp"
                    android:layout_height="@dimen/view_height_small"
                    android:layout_weight="1"
                    android:layout_marginRight="8dp"
                    app:borderColor="@color/border_brown"
                    app:backgroundColor="@color/transparent_gray"
                    app:backgroundDrawable="@drawable/bg_wood_wall"
                    android:gravity="center" >

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10dp"
