                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <!-- Name and Title -->
            <com.scipath.becomeaking.view.view.CustomLinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="50dp"
                android:layout_marginTop="10dp"
                app:borderColor="@color/border_brown"
                app:backgroundColor="@color/dark_blue"
                android:gravity="center_vertical" >

                <TextView
                    android:id="@+id/text_view_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/name"
                    android:textColor="@color/text_light_brown2"
                    android:textSize="24sp"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/icon_decorative_arrow"
                    android:rotation="45"
                    android:scaleType="fitXY"
                    android:adjustViewBounds="true"
                    android:contentDescription="@string/decorative_element"/>

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="@string/title"
                    android:textColor="@color/text_light_brown2"
                    android:textSize="24sp"
                    android:textAlignment="center" />

            </com.scipath.becomeaking.view.view.CustomLinearLayout>
            <!-- Name and Title -->

            <!-- Reputation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="25dp"
                android:gravity="center_horizontal" >

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="25dp"
                    android:src="@drawable/icon_civic_crown"
                    android:contentDescription="@string/reputation" />

                <com.scipath.becomeaking.view.view.CustomTextView
                    android:id="@+id/text_view_reputation2"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    app:borderColor="@color/border_brown"
                    app:backgroundColor="@color/game_menu_element"
                    android:text="@string/_0"
                    android:textColor="@color/text_brown"
                    android:textSize="@dimen/font_size_small"
                    android:textAlignment="center" />

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginHorizontal="25dp"
                    android:src="@drawable/icon_civic_crown"
                    android:contentDescription="@string/reputation" />

            </LinearLayout>
            <!-- Reputation -->

            <!-- Day -->
            <com.scipath.becomeaking.view.view.CustomLinearLayout
