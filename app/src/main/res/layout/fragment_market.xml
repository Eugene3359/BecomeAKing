<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.fragment.FinanceFragment" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <com.scipath.becomeaking.view.view.CustomButton
                android:id="@+id/button_back"
                android:layout_marginBottom="10dp"
                style="@style/ButtonBack" />

            <com.scipath.becomeaking.view.layout.CurrentCityLayout
                android:id="@+id/layout_current_city"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <include layout="@layout/layout_goods" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>